generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  User              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  User         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  password      String
  emailVerified DateTime?
  image         String?
  name          String
  firstName     String?
  lastName      String?
  phone         String?
  role          Role      @default(USER)

  Account            Account[]
  Session            Session[]
  properties         Property[]         @relation("UserProperties")
  inquiries          Inquiry[]
  favorites          Favorite[]
  alerts             Alert[]
  realEstateAgencies RealEstateAgency[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

enum Role {
  USER
  REALSTATE
  ADMIN
  AGENT
}

model RealEstateAgency {
  id       Int     @id @default(autoincrement())
  name     String
  password String
  address  String?
  phone    String?
  email    String  @unique
  website  String?

  userId Int?
  User   User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  properties Property[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Property {
  id                 Int           @id @default(autoincrement())
  title              String
  description        String?
  address            String
  city               String
  province           String
  country            String
  type               PropertyType
  price              Float
  area               Float?
  rooms              Int?
  bathrooms          Int?
  isAvailable        Boolean       @default(true)
  userId             Int
  realEstateAgencyId Int?
  images             String[]
  operationType      OperationType @default(RENT)

  latitude   Float?
  longitude  Float?
  parcelCCA  String?
  parcelPDA  String?
  parcelGeom Json?

  User             User              @relation("UserProperties", fields: [userId], references: [id])
  RealEstateAgency RealEstateAgency? @relation(fields: [realEstateAgencyId], references: [id], onDelete: SetNull)
  inquiries        Inquiry[]
  favorites        Favorite[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum PropertyType {
  HOUSE
  APARTMENT
  LAND
  COMMERCIAL_PROPERTY
  OFFICE
}

enum OperationType {
  RENT
  SALE
}

model Inquiry {
  id         Int      @id @default(autoincrement())
  message    String
  userId     Int
  propertyId Int
  User       User     @relation(fields: [userId], references: [id])
  Property   Property @relation(fields: [propertyId], references: [id])
  createdAt  DateTime @default(now())
}

model Favorite {
  id         Int      @id @default(autoincrement())
  userId     Int
  propertyId Int
  User       User     @relation(fields: [userId], references: [id])
  Property   Property @relation(fields: [propertyId], references: [id])
  createdAt  DateTime @default(now())

  @@unique([userId, propertyId])
}

model Alert {
  id            Int            @id @default(autoincrement())
  userId        Int
  operationType OperationType?
  propertyType  PropertyType?
  city          String?
  minPrice      Float?
  maxPrice      Float?
  User          User           @relation(fields: [userId], references: [id])
  createdAt     DateTime       @default(now())
}
